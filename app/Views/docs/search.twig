{% extends "layouts/main.twig" %}

{% block head %}
    <style>
        .search-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 60px 0;
            text-align: center;
        }
        .search-box {
            max-width: 600px;
            margin: 0 auto;
        }
        .search-results {
            background: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .search-result {
            border-bottom: 1px solid #dee2e6;
            padding: 20px 0;
        }
        .search-result:last-child {
            border-bottom: none;
        }
        .search-result h5 {
            margin-bottom: 10px;
        }
        .search-result h5 a {
            color: #667eea;
            text-decoration: none;
        }
        .search-result h5 a:hover {
            text-decoration: underline;
        }
        .search-excerpt {
            color: #6c757d;
            line-height: 1.6;
        }
        .search-meta {
            font-size: 0.9em;
            color: #6c757d;
            margin-top: 10px;
        }
        .no-results {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }
        .no-results-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }
        .popular-searches {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 30px;
            margin-top: 30px;
        }
        .search-suggestions {
            list-style: none;
            padding: 0;
        }
        .search-suggestions li {
            margin-bottom: 10px;
        }
        .search-suggestions a {
            color: #667eea;
            text-decoration: none;
            padding: 5px 10px;
            border-radius: 5px;
            transition: background 0.3s ease;
        }
        .search-suggestions a:hover {
            background: #667eea;
            color: white;
        }
        .breadcrumb {
            background: transparent;
            padding: 0;
        }
        .breadcrumb-item + .breadcrumb-item::before {
            content: "‚Ä∫";
            color: #6c757d;
        }
        .highlight {
            background: #fff3cd;
            padding: 2px 4px;
            border-radius: 3px;
        }
    </style>
{% endblock %}

{% block content %}
<!-- Header Section -->
<section class="search-header">
    <div class="container">
        <h1 class="display-4 fw-bold">{{ title }}</h1>
        <p class="lead">Find what you're looking for in our documentation</p>
        
        <!-- Search Box -->
        <div class="search-box mt-4">
            <form action="/docs/search" method="GET" class="d-flex">
                <input type="text" name="q" class="form-control form-control-lg me-2" 
                       placeholder="Search documentation..." value="{{ query }}" autofocus>
                <button type="submit" class="btn btn-light btn-lg">üîç Search</button>
            </form>
        </div>
        
        {% if query %}
        <div class="mt-3">
            <small class="opacity-75">
                {% if results|length > 0 %}
                    Found {{ results|length }} result{{ results|length != 1 ? 's' : '' }} for "{{ query }}"
                {% else %}
                    No results found for "{{ query }}"
                {% endif %}
            </small>
        </div>
        {% endif %}
    </div>
</section>

<!-- Navigation -->
<section class="py-3 bg-light">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/docs">Documentation</a></li>
                <li class="breadcrumb-item active">Search</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Search Results -->
<section class="py-5">
    <div class="container">
        {% if query %}
            {% if results|length > 0 %}
                <!-- Results -->
                <div class="search-results">
                    <h3 class="fw-bold mb-4">Search Results</h3>
                    
                    {% for result in results %}
                    <div class="search-result">
                        <h5>
                            <a href="{{ result.url }}">{{ result.title }}</a>
                        </h5>
                        <div class="search-excerpt">
                            {{ result.excerpt|raw }}
                        </div>
                        <div class="search-meta">
                            <span class="badge bg-primary">{{ result.section|title }}</span>
                            <span class="ms-2">{{ result.url }}</span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <!-- No Results -->
                <div class="search-results">
                    <div class="no-results">
                        <div class="no-results-icon">üîç</div>
                        <h3 class="fw-bold">No results found</h3>
                        <p class="lead">We couldn't find anything matching "{{ query }}"</p>
                        <p>Try searching for:</p>
                        <ul class="list-unstyled">
                            <li>‚Ä¢ Different keywords or phrases</li>
                            <li>‚Ä¢ More general terms</li>
                            <li>‚Ä¢ Check spelling and try again</li>
                        </ul>
                    </div>
                </div>
            {% endif %}
        {% endif %}
        
        <!-- Popular Searches / Quick Links -->
        <div class="popular-searches">
            <h4 class="fw-bold mb-3">
                {% if query %}
                    Popular Searches
                {% else %}
                    Quick Links
                {% endif %}
            </h4>
            
            <div class="row">
                <div class="col-md-6">
                    <h6 class="fw-bold">Getting Started</h6>
                    <ul class="search-suggestions">
                        <li><a href="/docs/installation">Installation</a></li>
                        <li><a href="/docs/getting-started">First Application</a></li>
                        <li><a href="/docs/cli">CLI Commands</a></li>
                        <li><a href="/docs/database">Database Setup</a></li>
                    </ul>
                </div>
                
                <div class="col-md-6">
                    <h6 class="fw-bold">Advanced Topics</h6>
                    <ul class="search-suggestions">
                        <li><a href="/docs/features">Framework Features</a></li>
                        <li><a href="/docs/templates">Template Engine</a></li>
                        <li><a href="/docs/debugging">Advanced Debugging</a></li>
                        <li><a href="/docs/deployment">Production Deployment</a></li>
                    </ul>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-md-6">
                    <h6 class="fw-bold">Common Searches</h6>
                    <ul class="search-suggestions">
                        <li><a href="/docs/search?q=model">Creating Models</a></li>
                        <li><a href="/docs/search?q=controller">Controllers</a></li>
                        <li><a href="/docs/search?q=routing">Routing</a></li>
                        <li><a href="/docs/search?q=migration">Database Migrations</a></li>
                    </ul>
                </div>
                
                <div class="col-md-6">
                    <h6 class="fw-bold">Help & Support</h6>
                    <ul class="search-suggestions">
                        <li><a href="/docs/troubleshooting">Troubleshooting</a></li>
                        <li><a href="/docs/api">API Reference</a></li>
                        <li><a href="https://community.arknox.dev">Community Forum</a></li>
                        <li><a href="https://github.com/arknox/framework">GitHub Issues</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Back to Documentation -->
        <div class="text-center mt-4">
            <a href="/docs" class="btn btn-primary">‚Üê Back to Documentation</a>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Focus search box
        const searchInput = document.querySelector('input[name="q"]');
        if (searchInput && !searchInput.value) {
            searchInput.focus();
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Escape to clear search
            if (e.key === 'Escape' && searchInput) {
                searchInput.value = '';
                searchInput.focus();
            }
            
            // Ctrl/Cmd + K to focus search
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                searchInput.focus();
                searchInput.select();
            }
        });
        
        // Highlight search terms in results
        const query = '{{ query }}';
        if (query) {
            const searchTerms = query.toLowerCase().split(' ');
            const excerpts = document.querySelectorAll('.search-excerpt');
            
            excerpts.forEach(excerpt => {
                let html = excerpt.innerHTML;
                searchTerms.forEach(term => {
                    if (term.length > 2) {
                        const regex = new RegExp(`(${term})`, 'gi');
                        html = html.replace(regex, '<span class="highlight">$1</span>');
                    }
                });
                excerpt.innerHTML = html;
            });
        }
        
        // Track search analytics (in a real implementation)
        if (query) {
            // Analytics tracking would go here
            console.log('Search performed:', query, 'Results:', {{ results|length }});
        }
    });
</script>
{% endblock %}
